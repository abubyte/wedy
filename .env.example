# Wedy Platform Environment Variables
# Copy this file to .env and fill in your actual values

# ===== ENVIRONMENT =====
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# ===== DATABASE CONFIGURATION =====
POSTGRES_DB=wedy_dev
POSTGRES_USER=dev
POSTGRES_PASSWORD=devpass
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Full database URL (constructed from above)
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ===== REDIS CONFIGURATION =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# ===== SECURITY SETTINGS =====
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-make-it-very-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# ===== CORS CONFIGURATION =====
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:8000"]

# ===== SMS SERVICE (eskiz.uz) =====
SMS_API_KEY=your-eskiz-api-key
SMS_BASE_URL=https://notify.eskiz.uz/api
SMS_EMAIL=your-email@example.com
SMS_PASSWORD=your-sms-password

# ===== AWS S3 CONFIGURATION =====
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=wedy-dev-bucket
AWS_REGION=us-east-1

# ===== PAYMENT PROVIDER CONFIGURATION =====

# Payme
PAYME_MERCHANT_ID=your-payme-merchant-id
PAYME_SECRET_KEY=your-payme-secret-key
PAYME_BASE_URL=https://checkout.paycom.uz/api

# Click
CLICK_MERCHANT_ID=your-click-merchant-id
CLICK_SECRET_KEY=your-click-secret-key
CLICK_BASE_URL=https://api.click.uz/v2

# UzumBank
UZUMBANK_MERCHANT_ID=your-uzumbank-merchant-id
UZUMBANK_SECRET_KEY=your-uzumbank-secret-key
UZUMBANK_BASE_URL=https://api.uzumbank.uz/v1

# ===== APPLICATION SETTINGS =====
APP_NAME=Wedy API
APP_VERSION=1.0.0
API_V1_STR=/api/v1

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# OTP Settings
OTP_EXPIRE_MINUTES=5
OTP_MAX_ATTEMPTS=5

# File Upload Settings
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_IMAGE_TYPES=["image/jpeg", "image/png"]

# Business Logic
PHONE_NUMBER_LENGTH=9  # Uzbekistan phone numbers (without country code)
FEATURED_SERVICE_PRICE_PER_DAY=5000  # 5000 UZS per day

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ===== MOBILE APP CONFIGURATION =====
# These will be used by Flutter apps

# App Store Configuration
ANDROID_PACKAGE_NAME=uz.wedy.client
IOS_BUNDLE_ID=uz.wedy.client
APP_STORE_ID=123456789

# Firebase (for future push notifications)
FIREBASE_PROJECT_ID=wedy-app
FIREBASE_MESSAGING_SENDER_ID=123456789

# ===== MONITORING & LOGGING =====
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-url

# ===== PRODUCTION ONLY =====
# SSL Certificate paths (production)
SSL_CERT_PATH=/etc/ssl/certs/wedy.crt
SSL_KEY_PATH=/etc/ssl/private/wedy.key

# Domain configuration (production)
DOMAIN_NAME=api.wedy.uz
CLIENT_DOMAIN=wedy.uz
MERCHANT_DOMAIN=merchant.wedy.uz

# ===== DEVELOPMENT TOOLS =====
# pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@wedy.uz
PGADMIN_DEFAULT_PASSWORD=admin123

# Redis Commander
REDIS_COMMANDER_PORT=8081

# API Documentation
ENABLE_DOCS=true  # Set to false in production
ENABLE_REDOC=true  # Set to false in production

# ===== TESTING =====
# Test database (for running tests)
TEST_DATABASE_URL=postgresql+asyncpg://dev:devpass@localhost:5432/wedy_test

# ===== UZBEKISTAN SPECIFIC =====
# Default regions for location filtering
DEFAULT_REGIONS=["Tashkent", "Samarkand", "Bukhara", "Andijan", "Ferghana", "Namangan", "Kashkadarya", "Surkhandarya", "Khorezm", "Navoiy", "Jizzakh", "Sirdarya", "Karakalpakstan"]

# Default currency
CURRENCY=UZS
CURRENCY_SYMBOL=сўм

# Timezone
TIMEZONE=Asia/Tashkent

# ===== FEATURE FLAGS =====
# Enable/disable features for gradual rollout
ENABLE_PAYMENTS=true
ENABLE_FEATURED_SERVICES=true
ENABLE_ANALYTICS=true
ENABLE_REVIEWS=true
ENABLE_SMS_NOTIFICATIONS=true