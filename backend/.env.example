# =========================
# Application Settings
# =========================
ENVIRONMENT=development  # development, staging, production
DEBUG=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:8000"]

# =========================
# Database Configuration
# =========================
DATABASE_URL=postgresql+asyncpg://dev:devpass@host.docker.internal:5432/wedy_dev

# =========================
# Redis Configuration
# =========================
REDIS_URL=redis://localhost:6379/0

# =========================
# Security Settings
# =========================
SECRET_KEY=your-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# =========================
# SMS Service (eskiz.uz)
# =========================
SMS_BASE_URL=https://notify.eskiz.uz/api
SMS_EMAIL=your-email@example.com
SMS_PASSWORD=your-password

# =========================
# AWS S3 Configuration
# =========================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=wedy-dev-bucket
AWS_REGION=us-east-1

# =========================
# Payment Provider Configuration
# =========================
# Payme
# PAYME_MERCHANT_ID=your-payme-merchant-id
# PAYME_SECRET_KEY=your-payme-secret-key
# PAYME_TEST_MODE=false
# PAYME_CALLBACK_URL=https://wedy.uz/api/v1/payme/webhook
# PAYME_API_URL=https://checkout.paycom.uz
# PAYME_TEST_API_URL=https://test.paycom.uz

# Click
# CLICK_MERCHANT_ID=your-click-merchant-id
# CLICK_SECRET_KEY=your-click-secret-key

# UzumBank
# UZUMBANK_MERCHANT_ID=your-uzumbank-merchant-id
# UZUMBANK_SECRET_KEY=your-uzumbank-secret-key

# =========================
# Application Constants
# =========================
APP_NAME=Wedy API
APP_VERSION=1.0.0
API_V1_STR=/api/v1
OTP_EXPIRE_MINUTES=5
OTP_MAX_ATTEMPTS=5
MAX_FILE_SIZE=5242880
FEATURED_SERVICE_PRICE_PER_DAY=5000
ALLOWED_IMAGE_TYPES=["image/jpeg", "image/png"]
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# =========================
# SSL Certificates (production)
# =========================
SSL_CERT_PATH=/etc/ssl/certs/wedy.crt
SSL_KEY_PATH=/etc/ssl/private/wedy.key

# =========================
# Domain configuration (production)
# =========================
DOMAIN_NAME=api.wedy.uz
CLIENT_DOMAIN=wedy.uz
MERCHANT_DOMAIN=merchant.wedy.uz

# =========================
# pgAdmin
# =========================
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=changeme

# =========================
# Redis Commander
# =========================
REDIS_COMMANDER_PORT=8081

# =========================
# API Documentation
# =========================
ENABLE_DOCS=true   # set to false in production
ENABLE_REDOC=true  # set to false in production

# =========================
# Test Database
# =========================
TEST_DATABASE_URL=postgresql+asyncpg://dev:devpass@host.docker.internal:5432/wedy_test

# =========================
# Default Regions
# =========================
DEFAULT_REGIONS=["Tashkent", "Samarkand", "Bukhara", "Andijan", "Ferghana", "Namangan", "Kashkadarya", "Surkhandarya", "Khorezm", "Navoiy", "Jizzakh", "Sirdarya", "Karakalpakstan"]
